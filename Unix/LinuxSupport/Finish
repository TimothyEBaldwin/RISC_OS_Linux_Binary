DIM buffer% 100
SYS "OS_ReadVarVal","Sys$ReturnCode",buffer%,100,0,3 TO ,R$
R% = VAL(R$)
PRINT

*Shutdown
SYS "XOS_SWINumberFromString",,"IXSupport_LinuxSyscall" TO LinuxSyscall%; V%
IF V% AND 1 THEN LinuxSyscall%=&59EC0 ELSE VDU 7
SYS LinuxSyscall%,R%,,,,,,,1
